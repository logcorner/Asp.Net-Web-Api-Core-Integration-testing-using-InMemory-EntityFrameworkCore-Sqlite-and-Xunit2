<Rule Name="AppHostRemoteDebugger" DisplayName="Vzdálený počítač" PageTemplate="debugger" Order="300" Description="Možnosti vzdáleného ladicího programu" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/build/2009/properties">

  <Rule.Metadata>
    <sys:Guid x:Key="DebugTargetTypeCommandGuid">FEEA6E9D-77D8-423F-9EDE-3970CBB76125</sys:Guid>
    <sys:UInt32 x:Key="DebugTargetTypeCommandId">0x400</sys:UInt32>
  </Rule.Metadata>

  <Rule.DataSource>
    <DataSource Persistence="UserFile"/>
  </Rule.DataSource>

  <Rule.Categories>
    <Category Name="StartOptions" DisplayName="Možnosti spuštění" Description="Možnosti spuštění"/>
    <Category Name="RemoteOptions" DisplayName="Vzdálené možnosti" Description="Vzdálené možnosti"/>
  </Rule.Categories>

  <BoolProperty Name="LaunchApplication" DisplayName="Spustit aplikaci" Category="StartOptions" F1Keyword="javascript.project.property.debugging.launchapplication" Description="Určuje, zda spustit aplikaci okamžitě, nebo počkat na ladění aplikace při spuštění."/>

  <BoolProperty Name="AllowLocalNetworkLoopback" DisplayName="Povolit zpětnou smyčku místní sítě" Category="StartOptions" F1Keyword="javascript.project.property.debugging.allowlocalnetworkloopback" Description="Při ladění aplikace pro Windows Store umožňuje použití místních služeb, ladění síťových přenosů a použití místní zpětné smyčky pro komunikaci s komponentami ve stejném počítači."/>

  <EnumProperty Name="DebuggerType" DisplayName="Typ ladicího programu" Category="StartOptions" F1Keyword="javascript.project.property.debugging.debuggertype" Description="Určuje, který ladicí program se má povolit. Při nastavení na Smíšený se používají ladicí programy pro spravovaný i nativní kód.">
    <EnumValue Name="NativeOnly" DisplayName="Jenom nativní" Description="Jenom nativní"/>
    <EnumValue Name="ManagedOnly" DisplayName="Jenom spravovaný" Description="Jenom spravovaný"/>
    <EnumValue Name="Script" DisplayName="Jenom skript" Description="Jenom skript"/>
    <EnumValue Name="Mixed" DisplayName="Smíšený (Spravovaný a Nativní)" Description="Smíšený (Spravovaný a Nativní)"/>
    <EnumProperty.Metadata>
      <NameValuePair Name="IsDebugType" Value="true"/>
    </EnumProperty.Metadata>
  </EnumProperty>

  <StringProperty Name="MachineName" DisplayName="Název počítače" Category="RemoteOptions" F1Keyword="javascript.project.property.debugging.machinename" Description="Určuje název počítače při použití vzdáleného ladění. Pomocí rozevíracího seznamu vyhledejte blízké počítače.">
    <StringProperty.ValueEditors>
      <ValueEditor EditorType="JsRemoteDebuggerOptionsPropertyEditor" DisplayName="&lt;Umístění...&gt;">
        <ValueEditor.Metadata>
          <NameValuePair Name="AuthenticationPropertyName" Value="RequireAuthentication"/>
        </ValueEditor.Metadata>
      </ValueEditor>
    </StringProperty.ValueEditors>
  </StringProperty>

  <EnumProperty Name="RequireAuthentication" DisplayName="Požadovat ověření" Category="RemoteOptions" F1Keyword="javascript.project.property.debugging.requireauthentication" Description="Určuje vyžadovanou úroveň ověřování při ladění na vzdálených zařízeních.">
    <EnumValue Name="false" DisplayName="Žádná" Description="Bez ověřování"/>
    <EnumValue Name="true" DisplayName="Windows" Description="Ověřování systému Windows"/>
    <EnumValue Name="Universal" DisplayName="Univerzální (nešifrovaný protokol)" Description="Univerzální ověřování"/>
  </EnumProperty>
</Rule>
