<Rule Name="AppHostRemoteDebugger" DisplayName="Equipo remoto" PageTemplate="debugger" Order="300" Description="Opciones del depurador remoto" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/build/2009/properties">

  <Rule.Metadata>
    <sys:Guid x:Key="DebugTargetTypeCommandGuid">FEEA6E9D-77D8-423F-9EDE-3970CBB76125</sys:Guid>
    <sys:UInt32 x:Key="DebugTargetTypeCommandId">0x400</sys:UInt32>
  </Rule.Metadata>

  <Rule.DataSource>
    <DataSource Persistence="UserFile"/>
  </Rule.DataSource>

  <Rule.Categories>
    <Category Name="StartOptions" DisplayName="Opciones de inicio" Description="Opciones de inicio"/>
    <Category Name="RemoteOptions" DisplayName="Opciones remotas" Description="Opciones remotas"/>
  </Rule.Categories>

  <BoolProperty Name="LaunchApplication" DisplayName="Iniciar aplicación" Category="StartOptions" F1Keyword="javascript.project.property.debugging.launchapplication" Description="Especifica si la aplicación se inicia inmediatamente o se espera a depurar la aplicación cuando empiece a ejecutarse."/>

  <BoolProperty Name="AllowLocalNetworkLoopback" DisplayName="Permitir bucle invertido de la red local" Category="StartOptions" F1Keyword="javascript.project.property.debugging.allowlocalnetworkloopback" Description="Al depurar una aplicación de la Tienda Windows, se pueden usar servicios locales, depurar el tráfico de red y usar un bucle invertido local para comunicarse con los componentes del mismo equipo."/>

  <EnumProperty Name="DebuggerType" DisplayName="Tipo de depurador" Category="StartOptions" F1Keyword="javascript.project.property.debugging.debuggertype" Description="Especifica el depurador que se debe habilitar. Cuando se establece en Mixto, se usan depuradores tanto de código administrado como de código nativo.">
    <EnumValue Name="NativeOnly" DisplayName="Solo nativo" Description="Solo nativo"/>
    <EnumValue Name="ManagedOnly" DisplayName="Solo administrado" Description="Solo administrado"/>
    <EnumValue Name="Script" DisplayName="Solo script" Description="Solo script"/>
    <EnumValue Name="Mixed" DisplayName="Mixto (administrado y nativo)" Description="Mixto (administrado y nativo)"/>
    <EnumProperty.Metadata>
      <NameValuePair Name="IsDebugType" Value="true"/>
    </EnumProperty.Metadata>
  </EnumProperty>

  <StringProperty Name="MachineName" DisplayName="Nombre de equipo" Category="RemoteOptions" F1Keyword="javascript.project.property.debugging.machinename" Description="Especifica el nombre del equipo que se va a usar para la depuración remota.  Use la lista desplegable para encontrar los equipos cercanos.">
    <StringProperty.ValueEditors>
      <ValueEditor EditorType="JsRemoteDebuggerOptionsPropertyEditor" DisplayName="&lt;Buscar...&gt;">
        <ValueEditor.Metadata>
          <NameValuePair Name="AuthenticationPropertyName" Value="RequireAuthentication"/>
        </ValueEditor.Metadata>
      </ValueEditor>
    </StringProperty.ValueEditors>
  </StringProperty>

  <EnumProperty Name="RequireAuthentication" DisplayName="Requerir autenticación" Category="RemoteOptions" F1Keyword="javascript.project.property.debugging.requireauthentication" Description="Especifica el nivel de autenticación necesario para realizar la depuración en dispositivos remotos.">
    <EnumValue Name="false" DisplayName="Ninguno" Description="Sin autenticación"/>
    <EnumValue Name="true" DisplayName="Windows" Description="Autenticación de Windows"/>
    <EnumValue Name="Universal" DisplayName="Universal (protocolo sin cifrar)" Description="Autenticación universal"/>
  </EnumProperty>
</Rule>
