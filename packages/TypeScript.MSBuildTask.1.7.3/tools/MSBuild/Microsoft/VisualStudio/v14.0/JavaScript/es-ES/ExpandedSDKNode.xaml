  <StringProperty Name="FilePath" DisplayName="Ruta de acceso del archivo" Category="General" ReadOnly="true" F1Keyword="javascript.project.property.expandedsdknode.filepath" Description="Ruta de acceso del archivo en el disco."/>

  <StringProperty Name="URI" DisplayName="URI" Category="General" ReadOnly="true" F1Keyword="javascript.project.property.expandedsdknode.uri" Description="URI que se puede usar para cargar este archivo."/>
