<Rule Name="ExpandedSdkNode" DisplayName="Nodo de SDK expandido" PageTemplate="generic" Description="Archivo de contenido de un SDK al que se hace referencia" PropertyPagesHidden="true" xmlns="http://schemas.microsoft.com/build/2009/properties">

  <Rule.Categories>
    <Category Name="General" DisplayName="General"/>
  </Rule.Categories>

  <Rule.DataSource>
    <DataSource Persistence="ExpandedSdkNode" ItemType="ExpandedSdkNode"/>
  </Rule.DataSource>

  <StringProperty Name="FileName" DisplayName="Nombre de archivo" Category="General" ReadOnly="true" F1Keyword="javascript.project.property.expandedsdknode.filename" Description="Nombre del archivo o carpeta."/>

